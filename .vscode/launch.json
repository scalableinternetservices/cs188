{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "tests",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "args": [
        "--runInBand"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true
    },
    {
      "name": "server.ts (restart on edit)",
      "type": "pwa-node",
      // "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ts-node-dev",
      // "protocol": "inspector",
      "stopOnEntry": false,
      "args": [
        "-r",
        "tsconfig-paths/register",
        "server/src/server.ts"
      ],
      "cwd": "${workspaceRoot}",
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "server.ts (no restart)",
      "type": "pwa-node",
      // "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ts-node",
      // "protocol": "inspector",
      "stopOnEntry": false,
      "args": [
        "-r",
        "tsconfig-paths/register",
        "server/src/server.ts"
      ],
      "cwd": "${workspaceRoot}",
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "loadtest.ts",
      "type": "pwa-node",
      // "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ts-node",
      // "protocol": "inspector",
      "stopOnEntry": false,
      "args": [
        "-r",
        "tsconfig-paths/register",
        "server/src/loadtest.ts"
      ],
      "cwd": "${workspaceRoot}",
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "restart": true
    }
  ]
}
